{% extends 'layout.html.j2' %}
{% import 'functions/macros.html.j2' as macros %}

{% block content -%}
{{ macros.std_table(width="95%") }}
    <tr>
        <td valign"top" align="left" colspan="2">
            <h2 style="color: #000 !important">{{ subject }}</h2>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            {{ macros.std_table() }}
                {% for info in additional_info %}
                    {{ macros.info_row(info) }}
                {% endfor %}
            </table>
        </td>
    </tr>
    <tr>
        <td align="left" colspan="2">
            <center width="100%" height="100%" style="display: grid">
                {% if browse_url is defined and browse_url != "" %}
                    <br/>
                    {{
                        macros.img(
                           browse_url,
                           "browse image",
                           width="300px",
                           style="border:1px solid #D4D3D3;border-radius: 6px;margin:auto"
                       )
                    }}
                {% endif %}
                <br/>
            </center>
        </td>
    </tr>
    <tr>
        <td align="left" style="text-align:left" text-align="left" colspan="2">
            {% if download_url is defined %}
                <h3 style="margin: 1em 0;margin:5px 0px 5px 20px;color: #000">
                    {{
                        macros.download_button(
                            download_url,
                            color='236192',
                            inner='Download&#160;&#160;&#160;<b>&#11015;</b>'
                        )
                    }}
                    {{
                        macros.download_button(
                            disable_sub_url,
                            color='d9534f',
                            inner='Disable&#160;Sub.&#160;&#160;&#160;<b>X</b>'
                       )
                    }}
                </h3>
                {{ macros.hr() }}
            {% endif %}
        </td>
    </tr>
</table>
{%- endblock %}
